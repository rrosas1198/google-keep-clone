{
    "name": "root",
    "private": true,
    "workspaces": [
        "backend",
        "console",
        "frontend",
        "packages/*"
    ],
    "gitHooks": {
        "commit-msg": "commitlint -e -V"
    },
    "scripts": {
        "build": "lage prepack",
        "rebuild": "lage prepack --no-cache",
        "lint": "npm run lint:ts && npm run lint:scss",
        "lint:ts": "eslint */**/*.{ts,tsx} --fix",
        "lint:scss": "stylelint */**/*.scss --fix",
        "deps:update": "lage deps:update && taze -w"
    },
    "devDependencies": {
        "@techkit/linter-config": "^0.3.8",
        "@types/node": "^18.7.18",
        "bauen": "^0.10.9",
        "eslint": "^8.23.1",
        "lage": "^1.8.8",
        "prettier": "^2.7.1",
        "taze": "^0.8.1",
        "typescript": "^4.8.3",
        "vitest": "^0.23.4",
        "yorkie": "^2.0.0"
    }
}
