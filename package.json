{
    "name": "root",
    "private": true,
    "workspaces": [
        "backend",
        "console",
        "frontend",
        "packages/*"
    ],
    "gitHooks": {
        "commit-msg": "commitlint -e -V"
    },
    "scripts": {
        "build": "lage prepack",
        "rebuild": "lage prepack --no-cache",
        "lint": "npm run lint:ts && npm run lint:scss",
        "lint:ts": "eslint */**/*.{ts,tsx} --fix",
        "lint:scss": "stylelint */**/*.scss --fix",
        "deps:update": "lage deps:update && taze -w"
    },
    "devDependencies": {
        "@techkit/linter-config": "^0.3.7",
        "@types/node": "^18.6.4",
        "bauen": "^0.10.9",
        "eslint": "^8.21.0",
        "lage": "^1.7.2",
        "prettier": "^2.7.1",
        "taze": "^0.7.6",
        "typescript": "^4.7.4",
        "vitest": "^0.21.0",
        "yorkie": "^2.0.0"
    }
}
