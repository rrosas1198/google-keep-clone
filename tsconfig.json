{
    "compilerOptions": {
        "lib": ["ES2020"],
        "module": "CommonJS",
        "target": "ES2020",
        "baseUrl": "./",
        "strict": true,
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        "forceConsistentCasingInFileNames": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    }
}
